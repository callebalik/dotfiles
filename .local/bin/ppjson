#!/usr/bin/env bash
# Usage:
#   ppjson myfile.json  Pretty print the contents of a file
#   ppjson              Pretty print the contents of what's in your clipboard

set -o errexit
set -o pipefail
set -o nounset

file="${1:-}"

if [ -f "${file}" ]; then
  jq < "${file}"
else
  if command -v pbpaste > /dev/null 2>&1; then pbpaste; else xclip -out -selection clipboard; fi | jq
fi
